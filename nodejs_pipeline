pipeline{
       agent any
environment {
  DOCKER_TAG = getversion()
}

       stages{
               stage (‘SCM’) {
                      steps{
                              git credentialsId: 'github', 
                                             url: 'https://github.com/AakashSRE/sample-node-project.git'
                      }
                      

                }
      
                stage('Docker Build'){
                      steps{
                              sh "docker build . -t aakash97/sreimage:${DOCKER_TAG}"
                      }

                }
       stage('DockerHub Push'){
                       steps{
					   
                          withCredentials([string(credentialsId: 'docker-hub', variable: 'dockerHubPwd')]){
                            sh "docker login -u aakash97 -p ${dockerHubPwd}"
                                             sh "docker push aakash97/sreimage:${DOCKER_TAG}"
						}
		}
      
	  }	
        	    stage('Docker Deploy'){
                      steps{
                        ansiblePlaybook credentialsId: 'ec2-user', disableHostKeyChecking: true, extras: "-e DOCKER_TAG=${DOCKER_TAG}", installation: 'ansible', inventory: 'sre.inv', playbook: 'deploy-docker.yml'
                             }
                                                          
                     }
		    }	
        }
def getversion(){

    def commithash = sh(returnStdout: true, script: 'git rev-parse --short HEAD')
    echo commithash
    return commithash

}
